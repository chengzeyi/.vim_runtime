{
  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": [
        "start"
      ],
      "filetypes": [
        "sh"
      ],
      "ignoredRootPaths": [
        "~"
      ]
    }
  },
  "java.completion.guessMethodArguments": true,
  "java.signatureHelp.enabled": true,
  "java.referencesCodeLens.enabled": true,
  "java.implementationsCodeLens.enabled": true,
  "go.goplsOptions": {
    "hoverKind": "FullDocumentation",
    "fuzzyMatching": false,
    "usePlaceholders": true,
    "completeUnimported": true,
    "deepCompletion": false,
    "codelens": {
      "generate": true,
      "upgrade.dependency": true,
      "test": true
    }
  },
  "clangd.arguments": [
    "--background-index",
    "--clang-tidy",
    "--suggest-missing-includes",
    "--cross-file-rename"
  ],
  // "clangd.semanticHighlighting": true,
  // "clangd.disableSnippetCompletion": true,
  // "marketplace.npmsio": true,
  // "suggest.autoTrigger": "none",
  // "suggest.keepCompleteopt": true,
  // "suggest.minTriggerInputLength": 2,
  // "suggest.enablePreselect": true,
  // "suggest.labelMaxLength": 40,
  // "suggest.detailMaxLength": 40,
  // "suggest.removeDuplicateItems": true,
  // "suggest.detailField": "preview",
  // "suggest.enablePreview": true,
  // "suggest.floatEnable": false,
  // "suggest.fixInsertedWord": false,
  "diagnostic.checkCurrentLine": true,
  // "diagnostic.messageTarget": "echo",
  // "diagnostic.virtualText": true,
  "diagnostic.virtualTextCurrentLineOnly": false,
  "diagnostic.virtualTextPrefix": "â€£ ",
  // "diagnostic.refreshOnInsertMode": true,
  "signature.hideOnTextChange": true,
  "codeLens.enable": true,
  "list.previewHighlightGroup": "Visual",
  "list.insertMappings": {
    "<C-n>": "normal:j",
    "<C-p>": "normal:k",
    "<C-d>": "action:drop",
    "<C-t>": "action:tabe",
    "<C-x>": "action:split",
    "<C-s>": "action:split",
    "<C-v>": "action:vsplit",
    "<C-q>": "action:quickfix"
  },
  "list.normalMappings": {
    "d": "action:delete",
    "v": "action:vsplit",
    "q": "action:quickfix"
  },
  // "coc.source.around.enable": false,
  // "coc.source.buffer.enable": false,
  "coc.preferences.currentFunctionSymbolAutoUpdate": true,
  "coc.preferences.extensionUpdateCheck": "never"
}
